        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    
    <menuitem name="bds" id="bds.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="bds.menu_1" parent="bds.menu_root"/>
    <menuitem name="Menu 2" id="bds.menu_2" parent="bds.menu_root"/>
    
    <!-- actions -->
    
    <menuitem name="bds_menu" id="bds_menu" parent="bds.menu_1"
              action="bds.action_window"/>
     <menuitem name="poster menu" id="poster_menu" parent="bds.menu_1"
              action="bds.poster_action"/>
     <menuitem name="fetch_menu" id="fetch_menu" parent="bds.menu_1"
              action="bds.fetch_action"/>
              
      <!-- 
    <menuitem name="Server to list" id="bds" parent="bds.menu_2"
              action="bds.action_server"/>
    -->
  </data>
</openerp>