        </record>
        
        
        <record id="import_site" model="ir.ui.view">
            <field name="name">Import ADA form</field>
            <field name="model">dai_tgg.ada_import</field>
            <field name="arch" type="xml">
                <form string="Import Translation">
                    <group>
