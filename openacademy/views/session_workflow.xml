<odoo>
    <data>
        <record model="workflow" id="wkf_session">
            <field name="name">OpenAcademy sessions workflow</field>
            <field name="osv">openacademy.session</field>
            <field name="on_create">True</field>
        </record>
         <record model="ir.actions.server" id="set_session_to_draft">
            <field name="name">Set session to Draft</field>
            <field name="model_id" ref="model_openacademy_session"/>
            <field name="code">
model.search([('id', 'in', context['active_ids'])]).action_draft()
            </field>
        </record>

        <record model="workflow.activity" id="draft_id">
            <field name="name">draft_</field>
            <field name="wkf_id" ref="wkf_session"/>
            <field name="kind">dummy</field>
            <field name="action"></field>
            <field name="action_id" ref="set_session_to_draft"/>

        </record>
        <record model="workflow.activity" id="confirmed_id">
            <field name="name">Confirmed_</field>
            <field name="wkf_id" ref="wkf_session"/>
            <field name="kind">function</field>
            <field name="action">action_confirm()</field>
        </record>
        <record model="workflow.activity" id="done">
            <field name="name">Done_</field>
            <field name="wkf_id" ref="wkf_session"/>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
        </record>

        <record model="workflow.transition" id="session_draft_to_confirmed">
            <field name="act_from" ref="draft_id"/>
            <field name="act_to" ref="confirmed_id"/>
            <field name="signal">confirm</field>
        </record>
        <record model="workflow.transition" id="session_confirmed_to_draft">
            <field name="act_from" ref="confirmed_id"/>
            <field name="act_to" ref="draft_id"/>
            <field name="signal">draft_btn</field>
        </record>
        <record model="workflow.transition" id="session_done_to_draft">
            <field name="act_from" ref="done"/>
            <field name="act_to" ref="draft_id"/>
            <field name="signal">draft_btn</field>
        </record>
        <record model="workflow.transition" id="session_confirmed_to_done">
            <field name="act_from" ref="confirmed_id"/>
            <field name="act_to" ref="done"/>
            <field name="signal">done</field>
        </record>
        <record model="workflow.transition" id="session_auto_confirm_half_filled">
            <field name="act_from" ref="draft_id"/>
            <field name="act_to" ref="confirmed_id"/>
            <field name="condition">taken_seats &gt; 50</field>
        </record>


    </data>
</odoo>
